{% extends 'base.html.twig' %}

{% block title 'Connexion' %}

{% block body %}
	<h1 class="display-4 text-center mb-5 shadow p-3 mb-5 bg-white rounded">
		Connectez-vous
	</h1>

	<div class="container shadow p-3 mb-5 bg-white rounded col-sm-6 col-sm-push-3">
		<div class="form-group col-md-6">
			<a href="{{ path('security_registration') }}" input type="button" class="btn btn-info">
				<i class="material-icons">how_to_reg</i>Inscription
			</a>
		</div>
		<form action="{{ path('security_connexion') }}" method="POST">
			<div class="form-group col-md-6">
				<input placeholder="Adresse mail..." required name="_username" type="text" class="form-control">
			</div>
			<div class="form-group col-md-6">
				<input placeholder="Mot de passe..." required name="_password" type="password" class="form-control">
			</div>
			<div class="form-group col-md-6">
				<button type="submit" class="btn btn-success">
					<span class="material-icons">
						lock_open
					</span>Connexion</button>
			</div>
		</form>
	</div>
{% endblock %}
