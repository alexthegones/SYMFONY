{% extends 'base.html.twig' %}

{% block title %}
	Contact
{% endblock %}
{% block stylesheets %}{% endblock %}
{% block body %}
	<h1 class="display-4 text-center mb-5 shadow p-3 mb-5 bg-white rounded">
		Contactez-nous
	</h1>
	<div class="container shadow p-4 bg-white rounded col-sm-5 ">
		<div class="row">
			<div class="col-5">
					{% for message in app.flashes('success') %}
						<div class="alert alert-success" id="alertC" role="alert">
							{{ message }}
						</div>
					{% endfor %}
				{{ form_start(formContact) }}
				<div class="col-md-6">
					{{ form_row(formContact.nom) }}
				</div>
				<div class="col-md-6">
					{{ form_row(formContact.email) }}
				</div>
				<div class="col-md-6">
					{{ form_row(formContact.message) }}
				</div>
				{# {{ form_widget(formContact) }} #}
				<div class="col-md-6">
					<button type="submit" class="btn btn-primary">Envoyer</button>
				</div>
				{{ form_end(formContact) }}
			</div>
			<div class="col-7">
				<div
					id="cartediv">{# OpenStrettMap/Leaflet #}
				</div>
			</div>
		</div>
	</div>

{% endblock %}
{% block javascripts %}{% endblock %}
